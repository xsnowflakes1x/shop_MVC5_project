@model List<WebbanGiay.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

    <script src="/Assets/Client/javascript/Controller/cartController.js"></script>

}
<div class="container">
    <div class="row breadcrumb-row">
        <div class="col-sm bg-dark">
            <div class="bread_crumb">
                <nav class="breadcrumb bg-light">
                    <a class="breadcrumb-item" href="/Home/Index">Trang chủ</a>
                    <i class="fas fa-chevron-right"></i>
                    <span class="breadcrumb-item active">Trang giỏ hàng</span>
                </nav>
            </div>
        </div>
    </div>
    <div class="row header-cart">Giỏ hàng</div>
    <div class="row">              
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số Lượng</td>
                        <td>Đơn Giá</td>
                        <td>Thành Tiền</td>
                        <td></td>
                    </tr>                  
                </thead>
                <tbody>                                       
                    @foreach (var item in Model)
                    {                       
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.TenSanPham</td>
                            <td><img src="@item.Product.HinhAnh" width="100" /></td>
                            <td><input type="number" class="txtQuantity" data-id="@item.Product.ID" value="@item.SoLuong" /></td>
                            <td>@item.Product.GiaBan.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.GiaBan.GetValueOrDefault(0) * item.SoLuong).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a></td>                                                                   
                        </tr>
                    }               
                </tbody>               
            </table>
            <div class="section form-group">
                <button id="btnContinue" class="btn-default btn btn-outline-secondary">Tiếp Tục Mua Hàng</button>
                <button id="btnUpdate" class="btn-default btn btn-outline-secondary">Cập Nhật Giỏ Hàng</button>
                <button id="btnDeleteAll" class="btn-default btn btn-outline-secondary">Xóa Giỏ Hàng</button>
                <button id="btnPayment" class="btn-default btn btn-outline-secondary">Thanh Toán</button>
            </div>
        }
        else
        {
            <div class="container">
                <div class="empty-cart">
                    <div>
                        <i class="fas fa-exclamation-circle fa-5x fa-stack-2x"></i>
                        <i class="fas fa-shopping-basket fa-6x fa-stack-1x"></i>
                        <h1> Giỏ hàng trống	<i class="fas fa-exclamation"></i></h1>
                        <p>Bạn nhấn vào <a href="/Home/Index">đây</a> để tiếp tục mua hàng nhé!<i class="far fa-smile-beam fa-1x"></i></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


